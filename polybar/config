[colors]
background = #222
background-alt = #444
foreground = #dfdfdf
foreground-alt = #555
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

[monitors]
primary = ${env:MONITOR:HDMI2}
secondary = ${env:MONITOR:eDP-1}

[bar/top]
monitor = ${monitors.primary}
monitor-fallback = ${monitors.secondary}
width = 100%
height = 27
radius = 6.0
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

